# Voxtype Configuration
# Managed by Ansible

state_file = "{{ voxtype_state_file }}"

[hotkey]
enabled = {{ 'true' if voxtype_hotkey_enabled else 'false' }}
{% if voxtype_hotkey_enabled %}
key = "SCROLLLOCK"
mode = "push_to_talk"
{% endif %}

[audio]
device = "default"
sample_rate = 16000
max_duration_secs = 60

[audio.feedback]
enabled = false

[whisper]
backend = "{{ voxtype_backend }}"
{% if voxtype_backend == 'remote' %}
model = ""
remote_endpoint = "{{ voxtype_remote_endpoint }}"
remote_model = "{{ voxtype_remote_model }}"
remote_api_key = "{{ voxtype_api_key }}"
{% else %}
model = "base.en"
{% endif %}
language = "auto"

[output]
mode = "type"
fallback_to_clipboard = true

[output.notification]
on_recording_start = true
on_recording_stop = true
on_transcription = true

[status]
icon_theme = "emoji"
