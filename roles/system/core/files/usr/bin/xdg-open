#!/usr/bin/env sh

# xdg-open replacement: try handlr first, else
# vicinae dmenu

file="$1"

# 1) Detect MIME
mime=$(handlr mime --json "$file" \
       | jq -r '.[0].mime')

# 2) Try using handlr directly - it should handle its own wildcards
if handlr open "$file" 2>/dev/null; then
  # If handlr succeeded, we're done
  exit 0
fi

# 3) Fallback: invoke vicinae dmenu and hand the chosen entry + file to gtk-launch
apps=$(find /usr/share/applications ~/.local/share/applications -name "*.desktop" 2>/dev/null | sed 's/.*\///;s/\.desktop$//' | sort -u)
selected=$(echo "$apps" | vicinae dmenu -p "Open with...")

if [ -n "$selected" ]; then
     exec gtk-launch "$selected" "$file"
fi
