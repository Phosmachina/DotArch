    "hyprland/window": {
        "format": "{title}",
        "max-length": 50,
        "separate-outputs": true
    },

    "tray": {
        "spacing": 10
    },

    "custom/clock": {
        "exec": "~/.config/waybar/scripts/waybar-clock.sh",
        "return-type": "json",
        "format": "{}",
        "on-click": "pkill -SIGUSR1 -f waybar-clock.sh",
