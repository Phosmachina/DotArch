{
    "layer": "top",
    "position": "top",
    "height": 22,
    "spacing": 4,
    "margin-top": 4,
    "margin-left": 6,
    "margin-right": 6,
    "margin-bottom": 0,

    "modules-left": [
        "hyprland/workspaces",
        "temperature",
        "cpu",
        "memory",
        "hyprland/window",
    ],
    "modules-center": ["custom/clock"],
    "modules-right": [
        "network",
        {% if target == 'laptop' %}
        "battery",
        "backlight",
        {% endif %}
        "custom/voxtype",
        "pulseaudio",
        "disk",
        "tray"
    ],

    "custom/voxtype": {
